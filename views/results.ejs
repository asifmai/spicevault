<!DOCTYPE html>
<html>

<head>
  <% include partials/commonhead %>
  <link rel="stylesheet" href="/stylesheets/list.css">
</head>

<body>
  <div class="body-wrapper">
    <div class="body-content list-page">
      <div class="container listtitle-section">

        <div class="row">
          <div class="col text-center">
            <div class="logo-container">
              <a href="/">
                <img src="/images/logo.png" alt="">
              </a>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col">
            <h2 class="sub-heading">Search results for "<%= searchterm %>"</h2>
          </div>
        </div>

        <% if (items.length > 0 ) { %>
        <div class="row">
          <div class="col">
            <div class="btn-group">
              <button class="btn btn-outline-secondary dropdown-toggle sortdropdown" type="button" id="triggerId"
                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Sort By
              </button>
              <div class="dropdown-menu" aria-labelledby="triggerId">
                <a class="dropdown-item" href="/search/name?searchterm=<%= searchterm %>" id="sortbyname">Name</a>
                <a class="dropdown-item" href="/search/origins?searchterm=<%= searchterm %>" id="sortbyorigin">Origin</a>
              </div>
            </div>
          </div>
        </div>
        <% } %>
      </div>

      <section id="list-section">
        <div class="container">
          <% if (items.length > 0 ) { %>
          <div class='img-list-parent'>

            <% for (var i = 0; i < items.length; i++) { %>
            <div class='img-list-item'>
              <div class='img-list-image text-center'>
                <% if (items[i].image != "") { %>
                <img class="img-list-src" src="/images/dishes/<%= items[i].image %>">
                <% } else { %>
                <img class="img-list-src" src="/images/dishes/placeholder.png">
                <% } %>
              </div>
              <div class='img-list-text'>
                <h3>
                  <%= items[i].name %>
                </h3>
                <p>
                  <%= items[i].description %>
                </p>
                <h6>Origin:</h6>
                <p>
                  <% for (var a = 0; a < items[i].origins.length; a++) { %>
                  <%= items[i].origins[a] %>
                  <% if (a != items[i].origins.length - 1) { %>
                  ,
                  <% } %>
                  <% } %>
                </p>
              </div>
            </div>
            <% } %>

          </div>
          <% } else { %>
          <p class="text-danger ml-4">No food items found</p>
          <% } %>
        </div>
      </section>
    </div>
  </div>
  <% include partials/commonscripts %>
</body>

</html>