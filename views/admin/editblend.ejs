<!DOCTYPE html>
<html lang="en">

<head>
    <% include partials/commonhead %>
    <link rel="stylesheet" href="/admin/css/semantic.min.css">
    <link rel='stylesheet prefetch' href='https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.1.8/components/icon.min.css'>
</head>

<body>
    <div class="page-wrapper">
        <!-- HEADER MOBILE-->
        <% include partials/headermobile %>
        <!-- END HEADER MOBILE-->

        <!-- MENU SIDEBAR-->
        <% include partials/sidebar %>
        <!-- END MENU SIDEBAR-->

        <!-- PAGE CONTAINER-->
        <div class="page-container">
            <!-- HEADER DESKTOP-->
            <% include partials/headerdesktop %>
            <!-- HEADER DESKTOP-->

            <!-- MAIN CONTENT-->
            <div class="main-content">
                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        <div class="row mb-4">
                            <div class="col-md-12">
                                <div class="overview-wrap">
                                    <h2 class="title-1">Edit Blend</h2>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <% include ../partials/messages %>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="card">
                                    <form action="/admin/editblend" method="post" class="form-horizontal">
                                        <input type="text" name="blendid" id="blendid" value="<%= blend._id %>" class="d-none">
                                        <div class="card-body card-block">
                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label for="name" class=" form-control-label">Name <span class="text-danger">*</span></label>
                                                </div>
                                                <div class="col-12 col-md-9">
                                                    <input type="text" id="name" name="name" class="form-control"
                                                        required value="<%= blend.name %>">
                                                </div>
                                            </div>
                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label for="descripition"
                                                        class=" form-control-label">Description</label>
                                                </div>
                                                <div class="col-12 col-md-9">
                                                    <textarea name="description" id="description" rows="2"
                                                        class="form-control"><%= blend.description %></textarea>
                                                </div>
                                            </div>
                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label for="spices"
                                                        class=" form-control-label">Spices</label>
                                                </div>
                                                <div class="col-12 col-md-9">
                                                    <select class="ui fluid search dropdown" multiple="" name="spices" id="spices">
                                                        <option value="">Spices</option>
                                                        <% for (var i = 0; i < spices.length; i++) { %>
                                                            <option value="<%= spices[i]._id %>"><%= spices[i].name %></option>
                                                        <% } %>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="card-footer">
                                            <button type="submit" class="btn btn-primary btn-sm">
                                                <i class="fa fa-dot-circle-o"></i> Save
                                            </button>
                                            <button type="reset" class="btn btn-danger btn-sm btn-cancel">
                                                <i class="fa fa-ban"></i> Cancel
                                            </button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <% include partials/footer %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- END MAIN CONTENT-->
            <!-- END PAGE CONTAINER-->
        </div>

    </div>
    <% include partials/commonscripts %>
    <script src="/admin/js/semantic.min.js"></script>
    <script>
        var blend = eval(<%- JSON.stringify(blend) %>)
    </script>
    <script src="/javascripts/admin/editblend.js"></script>
</body>

</html>